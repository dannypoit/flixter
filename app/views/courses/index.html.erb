<br />

<div class="booyah-box col-lg-8 offset-lg-2 col-10 offset-1">
  <h1 class="text-center">Available Courses</h1>
  <hr />

  <% @courses.each do |course| %>
    <div class="course">
      <h2 class="text-center">
        <%= link_to course.title, course_path(course) %>
      </h2>
      <%= image_tag course.image, class: 'img-fluid course-image' %>
      <br />
      <div class="row">
        <div class="col-sm-8 col-12">
          <%= course.description %></p>
        </div>
        <div class="col-sm-4 col-12 text-center">
          <%= link_to 'More Details...', course_path(course), class: 'btn btn-primary btn-large' %>
        </div>
      </div>
    </div>

    <div class="clr"></div>
  <% end %>
</div>
